{
    "elements": [
        {
            "type": "ValidationTextBox",
            "name": "Email",
            "caption": "Email"
        },
        {
            "type": "ValidationTextBox",
            "name": "AccessCode",
            "caption": "Access Code"
        },
        {
            "type": "NumberSpinner",
            "name": "UpdateInterval",
            "caption": "Update Interval (in seconds)",
            "suffix": "s",
            "minimum": 10
        }
    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Authenticate",
            "onClick": "IPS_RequestAction($id, 'Authenticate', 0);"
        },
        {
            "type": "Button",
            "caption": "Update Now",
            "onClick": "IPS_RequestAction($id, 'UpdateData', 0);"
        }
    ]
}
