{
    "elements": [
        { "type": "ValidationTextBox", "name": "Email", "caption": "E-Mail-Adresse" },
        { "type": "ValidationTextBox", "name": "LoginCode", "caption": "Login-Code" },
        { "type": "Select", "name": "CountryCode", "caption": "Ländercode", "options": [
            { "caption": "Deutschland", "value": "DE" },
            { "caption": "Schweiz", "value": "CH" },
            { "caption": "Österreich", "value": "AT" }
        ]},
        { "type": "ValidationTextBox", "name": "AcceptLanguage", "caption": "Sprache", "default": "de-DE" }
    ],
    "actions": [
        { "type": "Button", "label": "Authentifizierung starten", "onClick": "MercedesMe_RequestAuthToken($id);" },
        { "type": "Button", "label": "Daten aktualisieren", "onClick": "MercedesMe_UpdateData($id);" }
    ]
}
