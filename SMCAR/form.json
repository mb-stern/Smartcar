{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "ClientID",
      "caption": "Client ID"
    },
    {
      "type": "ValidationTextBox",
      "name": "ClientSecret",
      "caption": "Client Secret"
    },
    {
      "type": "ValidationTextBox",
      "name": "ConnectAddress",
      "caption": "Symcon Connect-Adresse (https://...)"
    },
    {
      "type": "Select",
      "name": "Mode",
      "caption": "Verbindungsmodus",
      "options": [
        {
          "caption": "Simuliert",
          "value": "simulated"
        },
        {
          "caption": "Live",
          "value": "live"
        }
      ]
    },
    {
      "type": "SelectMulti",
      "name": "Scopes",
      "caption": "Berechtigungen (Scopes)",
      "options": [
        {
          "caption": "Fahrzeuginformationen lesen",
          "value": "read_vehicle_info"
        },
        {
          "caption": "Standort lesen",
          "value": "read_location"
        },
        {
          "caption": "Reifendruck lesen",
          "value": "read_tires"
        },
        {
          "caption": "Kilometerstand lesen",
          "value": "read_odometer"
        },
        {
          "caption": "Batteriestatus lesen",
          "value": "read_battery"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Verbindung starten",
      "onClick": "SMCAR_GenerateAuthURL($id);"
    },
    {
      "type": "Button",
      "caption": "Fahrzeugdaten abrufen",
      "onClick": "SMCAR_FetchVehicleData($id);"
    },
    {
      "type": "Label",
      "caption": "Sag danke und unterst√ºtze den Modulentwickler:"
    },
    {
      "type": "RowLayout",
      "items": [
        {
          "type": "Image",
          "onClick": "echo 'https://paypal.me/mbstern';",
          "image": "data:image/jpeg;base64,/9j/4QAYRXhpZgAASUkqAAgAAAAAAAAAAAAAAP..."
        },
        {
          "type": "Label",
          "caption": ""
        }
      ]
    }
  ]
}
