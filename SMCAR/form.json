{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "ClientID",
      "caption": "Client ID"
    },
    {
      "type": "ValidationTextBox",
      "name": "ClientSecret",
      "caption": "Client Secret"
    },
    {
      "type": "ValidationTextBox",
      "name": "ConnectAddress",
      "caption": "Symcon Connect-Adresse (https://...)"
    },
    {
      "type": "Select",
      "name": "Mode",
      "caption": "Verbindungsmodus",
      "options": [
        {
          "caption": "Simuliert",
          "value": "simulated"
        },
        {
          "caption": "Live",
          "value": "live"
        }
      ]
    },
    {
      "type": "Label",
      "caption": "Berechtigungen (Scopes):"
    },
    {
      "type": "Category",
      "caption": "Scopes (Berechtigungen)",
      "items": [
        {
          "type": "CheckBox",
          "name": "ScopeReadVehicleInfo",
          "caption": "Fahrzeuginformationen lesen (read_vehicle_info)"
        },
        {
          "type": "CheckBox",
          "name": "ScopeReadLocation",
          "caption": "Standort lesen (read_location)"
        },
        {
          "type": "CheckBox",
          "name": "ScopeReadTires",
          "caption": "Reifendruck lesen (read_tires)"
        },
        {
          "type": "CheckBox",
          "name": "ScopeReadOdometer",
          "caption": "Kilometerstand lesen (read_odometer)"
        },
        {
          "type": "CheckBox",
          "name": "ScopeReadBattery",
          "caption": "Batteriestatus lesen (read_battery)"
        },
        {
          "type": "CheckBox",
          "name": "ScopeControlCharge",
          "caption": "Laden steuern (control_charge)"
        },
        {
          "type": "CheckBox",
          "name": "ScopeControlSecurity",
          "caption": "Fahrzeugsteuerung (control_security)"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Verbindung starten",
      "onClick": "SMCAR_GenerateAuthURL($id);"
    },
    {
      "type": "Button",
      "caption": "Fahrzeugdaten abrufen",
      "onClick": "SMCAR_FetchVehicleData($id);"
    },
    {
      "type": "Label",
      "caption": "Sag danke und unterst√ºtze den Modulentwickler:"
    },
    {
      "type": "RowLayout",
      "items": [
        {
          "type": "Image",
          "onClick": "echo 'https://paypal.me/mbstern';",
          "image": "data:image/jpeg;base64,..."
        }
      ]
    }
  ]
}
